datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Session {
  id              String    @id
  shop            String
  state           String
  isOnline        Boolean   @default(false)
  scope           String?
  expires         DateTime?
  accessToken     String
  userId          BigInt?
  firstName       String?
  lastName        String?
  email           String?
  accountOwner    Boolean   @default(false)
  locale          String?
  collaborator    Boolean   @default(false)
  emailVerified   Boolean   @default(false)
}

model StoreRecommendation {
  id              String   @id @default(cuid())
  shopId          String
  twitterHandle   String
  tweets          Json     // Store array of tweet texts
  recommendations Json     // Store recommended products and reasoning
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([shopId])
  @@index([twitterHandle])
}