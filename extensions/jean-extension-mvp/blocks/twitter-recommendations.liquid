{% schema %}
{
  "name": "Product Recommendations",
  "target": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Personalized Recommendations"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "min": 2,
      "max": 12,
      "step": 2,
      "default": 4,
      "label": "Number of products to show"
    }
  ]
}
{% endschema %}

<div class="twitter-recommendations" id="twitter-recommendations-{{ block.id }}">
  <h2>{{ block.settings.heading }}</h2>
  <div class="recommendations-grid">
    {% assign product_recommendations = block.metafield.my_extension.product_recommendations %}
    {% if product_recommendations != blank %}
      {% for product in product_recommendations limit: block.settings.products_to_show %}
        <div class="recommendation-item">
          {% if product.featured_image %}
            {% assign image_size = '300x300' %}
            <img 
              src="{{ product.featured_image | image_url: width: 300, height: 300, crop: 'center' }}"
              alt="{{ product.title }}"
              width="300"
              height="300"
              loading="lazy"
            >
          {% endif %}
          <h3>{{ product.title }}</h3>
          <p class="price">{{ product.price | money }}</p>
          <a href="{{ product.url }}" class="button">View Product</a>
        </div>
      {% endfor %}
    {% else %}
      <p class="no-recommendations">Connect your Twitter profile to see personalized recommendations!</p>
    {% endif %}
  </div>
</div>